<div id="<%= dom_id(review) %>" class="review">
  <h3><%= link_to review.title, review_path(review) %></h3>
  <p><%= simple_format(review.body) %></p>
  <p><small>作成: <%= l(review.created_at, format: :short) %> by <%= review.user&.username || "匿名" %></small></p>

  <% if current_user == review.user %>
    <%= link_to "Delete", review_path(review), method: :delete, data: { confirm: "削除しますか？", turbo_confirm: "削除しますか？" } %>
  <% end %>
</div>